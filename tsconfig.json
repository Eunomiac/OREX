{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		// "declaration": true,
		// "declarationMap": true,
		"isolatedModules": true,
		// "explainFiles": true,
		// "esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module":"ESNext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"outDir": "scripts",
		"plugins": [
			{
				"name": "typescript-eslint-language-service"
			}
		],
		"rootDir": ".",
		"strictNullChecks": true,
		"target": "ES2022",
		"traceResolution": false,
		"typeRoots": ["./node_modules/@types", "./node_modules/@league-of-foundry-developers", "./ts/@types"]
	},
	"exclude": [
		"/ts/@types/**",
		"dist/**",
		"/scripts/**",
		"gulpfile.js",
		"node_modules/**",
		".eslintrc.js",
		".gitignore",
		".htmlhintrc",
		".npmignore",
		".prettierrc.js",
		"stylelint.config.js"],
	"references": []
}