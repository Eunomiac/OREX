{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"allowUmdGlobalAccess": true,
		"allowJs": true,
		"checkJs": false,
		"experimentalDecorators": true,
		"lib": [
			"ES6",
			"DOM"
		],
		"module": "ES6",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"plugins": [
			{
				"name": "typescript-eslint-language-service"
			}
		],
		"strictNullChecks": true,
		"outDir": "scripts",
		"rootDir": ".",
		"target": "ES6",
		"types": ["@league-of-foundry-developers/foundry-vtt-types/index-lenient", "ts/@types", "ts/@types/gsap"],
		"typeRoots": ["./node_modules/@types/", "./"]
	},
	"exclude": ["dist/**", "scripts/**", "gulpfile.js", "node_modules/**", ".eslintrc.js", ".gitignore", ".htmlhintrc", ".npmignore", ".prettierrc.js", "stylelint.config.js"],
	"references": []	
}